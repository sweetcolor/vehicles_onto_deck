- if @parsed_query[:a].first == 'yn'
  = render partial: 'main_page/answer_yn', locals: { answer: @answer }
- if @parsed_query[:a].first == 'yna'
  = render partial: 'main_page/answer_yna', locals: { answer: @answer, vehicles_location: @deck.vehicles_location }
- if @parsed_query[:a].first == 'vis'
  = render partial: 'main_page/answer_vis', locals: { deck: @deck, cells: @deck.cells, location: @vehicles_location, row: 0, col: 0,
        passed_map: Array.new(@deck.length, 0) }
